<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peter.thekitchenmenu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false">
    </uses-feature>

    <application
        android:name=".app.Singletons"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- TODO: Auto backup see: https://developer.android.com/guide/topics/data/autobackup -->

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.peter.thekitchenmenu.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">
            </meta-data>
        </provider>

        <provider
            android:name=".provider.SuggestionsProvider"
            android:authorities="com.example.peter.thekitchenmenu.provider.SuggestionsProvider"
            android:exported="false">
        </provider>

        <provider
            android:name=".provider.RecentSuggestionsProvider"
            android:authorities="com.example.peter.thekitchenmenu.provider.RecentSuggestionsProvider"
            android:exported="false">
        </provider>

        <service
            android:name=".widget.WidgetServiceList"
            android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>

        <service
            android:name=".widget.WidgetService">
        </service>

        <!-- Service tag pointing to the sync intent service -->
        <service
            android:name=".data.repositoryProduct.SyncRemoteDataService"
            android:exported="false">
        </service>

        <receiver
            android:name=".widget.TKMWidgetProvider">

            <intent-filter>
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/tkmwidget_provider_info">
            </meta-data>
        </receiver>

        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity to view lists of productEntities -->
        <activity
            android:name=".ui.catalog.CatalogActivity"
            android:label="@string/title_product_catalog"
            android:theme="@style/AppTheme"
            android:parentActivityName=".ui.main.MainActivity">

            <!-- Activates the search widget and points to the correct SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ui.catalog.ActivitySearchProd">
            </meta-data>
        </activity>

        <!-- Activity view of a single productEntities details -->
        <activity
            android:name=".ui.detail.product.producteditor.ProductEditorActivity"
            android:theme="@style/AppTheme">
        </activity>

        <!-- Searchable activity for finding Products -->
        <activity
            android:name=".ui.catalog.SearchProducts"
            android:launchMode="singleTop">

            <!-- Receives a query with a request to SEARCH -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <!-- Receives a query with a request to view a specific item -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <!-- Points to searchable configuration for this search activity -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_product">
            </meta-data>
        </activity>

        <activity
            android:name=".ui.catalog.RecipeCatalog"
            android:label="@string/title_recipe_catalog"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".ui.detail.RecipeEditor"
            android:label="@string/title_recipe_editor"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"> <!-- optional (needed if default theme has no action bar) -->
        </activity>

        <activity
            android:name=".ui.detail.product.viewer.ProductViewerActivity"
            android:label="@string/activity_title_view_product"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".ui.detail.product.usedproducteditor.UsedProductEditorActivity"
            android:label="@string/activity_title_add_used_product"
            android:theme="@style/AppTheme">
        </activity>

        <uses-library
            android:name="android.test.runner"
            android:required="false">
        </uses-library>
    </application>
</manifest>