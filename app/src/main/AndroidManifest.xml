<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peter.thekitchenmenu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.navigation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.list.ProductCatalogActivity"
            android:label="Product Catalog"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ui.detail.ProductDetailActivity"
            android:label="@string/activity_detail_product_title"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ui.list.RecipeCatalogActivity"
            android:label="@string/activity_catalog_recipe_title"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ui.detail.RecipeDetailActivity"
            android:theme="@style/AppTheme"/>

    </application>
</manifest>