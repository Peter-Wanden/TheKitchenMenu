<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peter.thekitchenmenu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.detail.ProductDetailActivity"
            android:label="@string/title_product_detail"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ui.catalog.ProductCatalogActivity"
            android:label="Product Catalog"
            android:theme="@style/AppTheme"/>

        <provider
            android:name=".data.TKMProvider"
            android:authorities="com.example.peter.thekitchenmenu"
            android:exported="false" />

    </application>

</manifest>