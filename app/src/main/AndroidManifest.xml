<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peter.thekitchenmenu">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.navigation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.catalog.ActivityCatalogProduct"
            android:label="Product Catalog"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ui.detail.ActivityDetailProduct"
            android:label="@string/activity_detail_product_title"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ui.catalog.ActivityCatalogRecipe"
            android:label="@string/activity_catalog_recipe_title"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ui.detail.ActivityDetailRecipe"
            android:theme="@style/AppTheme"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.peter.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">
            </meta-data>
        </provider>

    </application>
</manifest>