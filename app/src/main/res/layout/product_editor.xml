<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="productEditorViewModel"
            type="com.example.peter.thekitchenmenu.viewmodels.ProductEditorViewModel">
        </variable>

        <variable
            name="textValidation"
            type="com.example.peter.thekitchenmenu.utils.ProductTextValidationHandler">
        </variable>

        <variable
            name="numericValidation"
            type="com.example.peter.thekitchenmenu.utils.ProductNumericValidationHandler">
        </variable>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/standard_margin"
        android:paddingEnd="@dimen/standard_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/label_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_description"
            android:afterTextChanged='@{textValidation::validateDescription}'
            android:text='@={productEditorViewModel.description}'
            android:selection='@{productEditorViewModel.description.length()}'
            android:inputType="textCapWords"
            android:hint="@string/hint_description"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:nextFocusForward="@id/editable_made_by"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/made_by_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/label_made_by"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editable_description" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_made_by"
            android:afterTextChanged='@{textValidation::validateMadeBy}'
            android:text='@={productEditorViewModel.madeBy}'
            android:selection='@{productEditorViewModel.madeBy.length()}'
            android:hint="@string/hint_made_by"
            android:inputType="textCapWords"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/made_by_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_label"
            style="@style/EditableCategoryStyle"
            android:text="@string/label_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_category" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_category"
            android:selectedItemPosition='@={productEditorViewModel.category}'
            style="@style/spinner_style"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/category_error"
            app:layout_constraintStart_toEndOf="@+id/category_label"
            app:layout_constraintTop_toBottomOf="@+id/editable_made_by" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_category" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shelf_life_label"
            app:showIfFood='@{productEditorViewModel.category}'
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/label_shelf_life"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_shelf_life"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_shelf_life"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_shelf_life"
            android:selectedItemPosition='@={productEditorViewModel.shelfLife}'
            app:showIfFood='@{productEditorViewModel.category}'
            android:nextFocusForward="@id/multi_pack_check_box"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/shelf_life_error"
            app:layout_constraintStart_toEndOf="@+id/shelf_life_label"
            app:layout_constraintTop_toBottomOf="@+id/spinner_category" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shelf_life_error"
            app:showIfFood='@{productEditorViewModel.category}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_shelf_life"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_shelf_life" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/multi_pack_label"
            style="@style/EditableCategoryStyle"
            android:text="@string/label_multi_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/multi_pack_check_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/multi_pack_check_box" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/multi_pack_check_box"
            app:shelfLifeValueChange='@{productEditorViewModel.shelfLife}'
            app:nonFoodGetFocus='@{productEditorViewModel.category}'
            android:checked='@={productEditorViewModel.multiPack}'
            android:buttonTint="@color/primaryColor"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.223"
            app:layout_constraintStart_toEndOf="@+id/multi_pack_label"
            app:layout_constraintTop_toBottomOf="@+id/spinner_shelf_life" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/items_in_pack_label"
            app:showWhenChecked='@{productEditorViewModel.multiPack}'
            style="@style/EditableCategoryStyle"
            android:text="@string/label_number_of_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/editable_items_in_pack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editable_items_in_pack"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_items_in_pack"
            android:text='@={`` + productEditorViewModel.numberOfItemsInPack}'
            app:showWhenChecked='@{productEditorViewModel.multiPack}'
            android:nextFocusForward="@id/spinner_unit_of_measure"
            android:inputType="number"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/items_in_pack_label"
            app:layout_constraintTop_toBottomOf="@+id/multi_pack_check_box"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/unit_of_measure_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/unit_of_measure_label"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_unit_of_measure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_unit_of_measure" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_unit_of_measure"
            android:selectedItemPosition='@={productEditorViewModel.unitOfMeasure}'
            style="@style/spinner_style"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/unit_of_measure_error"
            app:layout_constraintStart_toEndOf="@+id/unit_of_measure_label"
            app:layout_constraintTop_toBottomOf="@+id/editable_items_in_pack">
        </androidx.appcompat.widget.AppCompatSpinner>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/unit_of_measure_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_unit_of_measure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_unit_of_measure" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pack_size_label"
            app:multiPack="@{productEditorViewModel.multiPack}"
            app:onUnitOfMeasureSelected='@{productEditorViewModel.unitOfMeasure}'
            tools:text="@string/pack_size_total"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/editable_pack_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editable_pack_size" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_pack_size"
            app:multiPack="@{productEditorViewModel.multiPack}"
            app:onUnitOfMeasureSelected='@{productEditorViewModel.unitOfMeasure}'
            android:afterTextChanged='@{() -> numericValidation.validatePackSize(editablePackSize, productEditorViewModel.unitOfMeasure)}'
            tools:hint="@string/pack_size_total_hint"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pack_size_label"
            app:layout_constraintTop_toBottomOf="@+id/spinner_unit_of_measure" />

        <TextView
            android:id="@+id/total_or_unit"
            app:multiPack="@{productEditorViewModel.multiPack}"
            app:onUnitOfMeasureSelected='@{productEditorViewModel.unitOfMeasure}'
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/total_or_unit"
            app:layout_constraintBottom_toTopOf="@+id/item_size_label"
            app:layout_constraintEnd_toEndOf="@+id/pack_size_label"
            app:layout_constraintStart_toStartOf="@+id/pack_size_label"
            app:layout_constraintTop_toBottomOf="@+id/pack_size_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_size_label"
            app:multiPack="@{productEditorViewModel.multiPack}"
            app:onUnitOfMeasureSelected='@{productEditorViewModel.unitOfMeasure}'
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/editable_item_size"
            app:layout_constraintEnd_toEndOf="@+id/pack_size_label"
            app:layout_constraintStart_toStartOf="@+id/pack_size_label"
            app:layout_constraintTop_toTopOf="@+id/editable_item_size"
            tools:text="@string/item_size" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_item_size"
            style="@style/EditableFieldStyle"
            app:multiPack="@{productEditorViewModel.multiPack}"
            app:onUnitOfMeasureSelected='@{productEditorViewModel.unitOfMeasure}'
            app:showWhenChecked="@{productEditorViewModel.multiPack}"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/editable_pack_size"
            app:layout_constraintStart_toStartOf="@+id/editable_pack_size"
            app:layout_constraintTop_toBottomOf="@+id/editable_pack_size"
            tools:hint="@string/item_size_hint" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>