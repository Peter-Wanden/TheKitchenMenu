<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.peter.thekitchenmenu.ui.detail.product.editor.ProductEditorViewModel">
        </variable>
    </data>

    <RelativeLayout
        android:id="@+id/product_editor_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/product_editor_save_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_action_done"
            android:tint="@color/white"
            android:visibility="@{viewModel.allModelsAreValid ? View.GONE : View.VISIBLE}"
            app:backgroundTint="@color/textColorHighlight" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/primaryColor"
            android:elevation="@dimen/starting_elevation"
            android:fitsSystemWindows="true"
            app:title="@{viewModel.activityTitle}" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <LinearLayout
                android:id="@+id/product_editor_include_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/image_editor_fragment"
                    android:name="com.example.peter.thekitchenmenu.utils.imageeditor.ImageEditorFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:layout="@layout/image_editor">
                </fragment>

                <fragment
                    android:id="@+id/product_identity_fragment"
                    android:name="com.example.peter.thekitchenmenu.ui.detail.product.editor.ProductIdentityEditorFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:layout="@layout/product_editor_identity">
                </fragment>

                <fragment
                    android:id="@+id/product_size_fragment"
                    android:name="com.example.peter.thekitchenmenu.ui.detail.product.editor.ProductMeasurementEditorFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:layout="@layout/product_editor_measurement">
                </fragment>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>