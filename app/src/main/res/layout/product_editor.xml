<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementSubTypeConverter" />

        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementZeroToBlankConverter" />

        <variable
            name="productEditorViewModel"
            type="com.example.peter.thekitchenmenu.viewmodels.ProductEditorViewModel" />

        <variable
            name="textValidation"
            type="com.example.peter.thekitchenmenu.utils.ProductTextValidationHandler" />

        <variable
            name="numericValidation"
            type="com.example.peter.thekitchenmenu.utils.ProductNumericValidationHandler" />

        <variable
            name="measurement"
            type="com.example.peter.thekitchenmenu.utils.unitofmeasure.ObservableMeasurementModel" />

        <variable
            name="productModel"
            type="com.example.peter.thekitchenmenu.data.model.ObservableProductModel" />

        <variable
            name="baseSiUnits"
            type="double" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/standard_margin"
        android:paddingEnd="@dimen/standard_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/label_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_description"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:afterTextChanged='@{() -> textValidation.validateDescription(editableDescription)}'
            android:hint="@string/hint_description"
            android:inputType="textCapWords"
            android:nextFocusForward="@id/editable_made_by"
            android:selection='@{productEditorViewModel.productModel.description.length()}'
            android:text='@{productEditorViewModel.productModel.description}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/made_by_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/label_made_by"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editable_description" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_made_by"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:afterTextChanged='@{() -> textValidation.validateMadeBy(editableMadeBy)}'
            android:hint="@string/hint_made_by"
            android:inputType="textCapWords"
            android:selection='@{productEditorViewModel.productModel.madeBy.length()}'
            android:text='@{productEditorViewModel.productModel.madeBy}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/made_by_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_category"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_category"
            app:layout_constraintEnd_toEndOf="@+id/shelf_life_label"
            app:layout_constraintStart_toStartOf="@+id/shelf_life_label"
            app:layout_constraintTop_toTopOf="@+id/spinner_category" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_category"
            style="@style/spinner_style"
            android:layout_width="200dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:dropDownWidth="wrap_content"
            android:selectedItemPosition='@={productEditorViewModel.productModel.category}'
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@+id/category_label"
            app:layout_constraintTop_toBottomOf="@+id/editable_made_by" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shelf_life_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/label_shelf_life"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_shelf_life"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_shelf_life"
            app:showIfFood='@{productEditorViewModel.productModel.category}' />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_shelf_life"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginTop="8dp"
            android:dropDownWidth="wrap_content"
            android:selectedItemPosition='@={productEditorViewModel.productModel.shelfLife}'
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@+id/spinner_category"
            app:layout_constraintStart_toStartOf="@+id/spinner_category"
            app:layout_constraintTop_toBottomOf="@+id/spinner_category"
            app:showIfFood='@{productEditorViewModel.productModel.category}' />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/measurement_border"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/rectangle_radius_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_shelf_life"
            app:layout_constraintBottom_toBottomOf="@+id/product_measurement_parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_measurement_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/measurement_border"
            app:layout_constraintEnd_toEndOf="@id/measurement_border"
            app:layout_constraintStart_toEndOf="@+id/item_size_label"
            app:layout_constraintTop_toBottomOf="@+id/spinner_unit_of_measure">

            <include
                android:id="@+id/product_measurement_double"
                layout="@layout/product_measurement_double"
                app:layout_constraintBottom_toBottomOf="@+id/product_measurement_parent"
                app:layout_constraintEnd_toEndOf="@+id/product_measurement_parent"
                app:layout_constraintStart_toStartOf="@+id/product_measurement_parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/items_in_pack_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/label_number_of_packs"
            app:layout_constraintEnd_toEndOf="@+id/measurement_border"
            app:layout_constraintStart_toStartOf="@+id/measurement_border"
            app:layout_constraintTop_toTopOf="@+id/measurement_border" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multi_pack_plus"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:onClick='@{() -> numericValidation.modifyItemsInPackByOne(editableItemsInPack, multiPackPlus)}'
            android:text="@string/plus_sign"
            app:layout_constraintBottom_toBottomOf="@+id/editable_items_in_pack"
            app:layout_constraintStart_toEndOf="@+id/editable_items_in_pack"
            app:layout_constraintTop_toTopOf="@+id/editable_items_in_pack" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_items_in_pack"
            style="@style/EditableFieldStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginTop="8dp"
            android:afterTextChanged='@{() -> numericValidation.validateItemsInPack(editableItemsInPack)}'
            android:gravity="center"
            android:inputType="number"
            android:nextFocusForward="@id/spinner_unit_of_measure"
            android:text='@{`` + productEditorViewModel.measurement.numberOfItems}'
            app:layout_constraintEnd_toEndOf="@+id/items_in_pack_label"
            app:layout_constraintStart_toStartOf="@+id/items_in_pack_label"
            app:layout_constraintTop_toBottomOf="@+id/items_in_pack_label"
            tools:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multi_pack_minus"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:onClick='@{() -> numericValidation.modifyItemsInPackByOne(editableItemsInPack, multiPackMinus)}'
            android:text="@string/minus_sign"
            app:layout_constraintBottom_toBottomOf="@+id/editable_items_in_pack"
            app:layout_constraintEnd_toStartOf="@+id/editable_items_in_pack"
            app:layout_constraintTop_toTopOf="@+id/editable_items_in_pack" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/unit_of_measure_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/unit_of_measure_label"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_unit_of_measure"
            app:layout_constraintEnd_toStartOf="@+id/spinner_unit_of_measure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_unit_of_measure" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_unit_of_measure"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:dropDownWidth="wrap_content"
            android:onItemSelected='@{() -> numericValidation.newUnitOfMeasureSelected(spinnerUnitOfMeasure)}'
            android:selectedItemPosition='@{MeasurementSubTypeConverter.toInt(productEditorViewModel.measurement.measurementSubType)}'
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@+id/multi_pack_plus"
            app:layout_constraintStart_toStartOf="@+id/multi_pack_minus"
            app:layout_constraintTop_toBottomOf="@+id/editable_items_in_pack">
        </androidx.appcompat.widget.AppCompatSpinner>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pack_size_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_unit_of_measure"
            app:layout_constraintEnd_toEndOf="@+id/item_size_label"
            app:layout_constraintStart_toStartOf="@+id/item_size_label"
            app:layout_constraintBottom_toBottomOf="@+id/total_or_unit"
            app:onUnitOfMeasureSelected='@{productEditorViewModel.measurement.measurementSubType}'
            tools:text="@string/pack_size_total" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/total_or_unit"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/total_or_unit"
            app:layout_constraintEnd_toEndOf="@+id/item_size_label"
            app:layout_constraintStart_toStartOf="@+id/item_size_label"
            app:layout_constraintTop_toBottomOf="@+id/pack_size_label"
            app:layout_constraintBottom_toTopOf="@id/item_size_label"
            app:multiPack='@{productEditorViewModel.multiPack}'
            app:onUnitOfMeasureSelected='@{productEditorViewModel.measurement.measurementSubType}' />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_size_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/measurement_border"
            app:layout_constraintTop_toBottomOf="@+id/total_or_unit"
            app:layout_constraintBottom_toBottomOf="@id/measurement_border"
            app:multiPack='@{productEditorViewModel.multiPack}'
            app:onUnitOfMeasureSelected='@{productEditorViewModel.measurement.measurementSubType}'
            tools:text="@string/single_pack_size" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>