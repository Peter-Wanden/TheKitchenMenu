<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightGrey">

    <android.support.v7.widget.CardView
        android:id="@+id/list_item_product_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_view_margin"
        android:layout_marginEnd="@dimen/card_view_margin"
        android:layout_marginTop="@dimen/card_view_margin_top_bottom"
        android:layout_marginBottom="@dimen/card_view_margin_top_bottom"
        android:clickable="true"
        android:elevation="@dimen/card_view_elevation"
        android:focusable="true"
        android:foregroundGravity="center"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/list_item_product_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_item_product_tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-medium"
                android:gravity="start|top"
                android:maxLines="3"
                android:paddingEnd="@dimen/list_item_top_full_margin"
                android:paddingStart="@dimen/list_item_top_full_margin"
                android:paddingTop="@dimen/list_item_top_half_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/darkGrey"
                app:layout_constraintEnd_toStartOf="@+id/list_item_product_iv_product_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Cirio canned chopped tomatoes" />

            <ImageView
                android:id="@+id/list_item_product_iv_favorite_border"
                android:contentDescription="@string/cd_add_to_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/list_item_top_full_margin"
                android:elevation="2dp"/>

            <ImageView
                android:id="@+id/list_item_product_iv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_item_top_full_margin"
                android:contentDescription="@string/cd_remove_from_favorites"
                android:elevation="2dp"
                android:src="@drawable/ic_favorite"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/list_item_product_iv_product_image"
                android:transitionName="@string/transition_product"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/list_item_bottom_margin"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/cd_picture_of_product"
                android:src="@drawable/cirio_tinned_tomatoes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/list_item_product_iv_favorite_border"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/list_item_product_tv_pack_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="end|center_vertical"
                android:paddingEnd="@dimen/list_item_top_half_margin"
                android:paddingStart="@dimen/list_item_top_full_margin"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_item_product_tv_description"
                tools:text="400" />

            <TextView
                android:id="@+id/list_item_product_tv_label_unit_of_measure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/list_item_top_half_margin"
                android:paddingEnd="@dimen/list_item_top_half_margin"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/grey"
                app:layout_constraintStart_toEndOf="@+id/list_item_product_tv_pack_size"
                app:layout_constraintTop_toBottomOf="@+id/list_item_product_tv_description"
                tools:text="ml" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>