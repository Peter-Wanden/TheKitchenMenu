<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementSubtypeConverter" />
        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementSubtype"/>

        <variable
            name="viewModel"
            type="com.example.peter.thekitchenmenu.ui.detail.product.producteditor.ProductMeasurementViewModel" />

        <variable
            name="measurementHandler"
            type="com.example.peter.thekitchenmenu.ui.detail.product.producteditor.ProductMeasurementHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_identity_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/unit_of_measure_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/unit_of_measure_label"
            app:layout_constraintTop_toTopOf="@id/spinner_unit_of_measure"
            app:layout_constraintBottom_toBottomOf="@id/spinner_unit_of_measure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner_unit_of_measure"
            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_unit_of_measure"
            style="@style/spinner_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:dropDownWidth="wrap_content"
            android:selectedItemPosition="@={MeasurementSubtypeConverter.toInt(viewModel.subtype)}"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@id/unit_of_measure_label"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/multi_pack_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/label_multi_pack"
            app:layout_constraintTop_toTopOf="@id/multi_pack_checkBox"
            app:layout_constraintBottom_toBottomOf="@id/multi_pack_checkBox"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/multi_pack_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColorHighlight="@color/textColorHighlight"
            app:layout_constraintTop_toBottomOf="@id/spinner_unit_of_measure"
            app:layout_constraintStart_toEndOf="@id/multi_pack_label"
            android:checked="@={viewModel.multiPack}"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/products_in_pack_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/label_number_of_packs"
            android:visibility="@{viewModel.numberOfProducts > 1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/multi_pack_label"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multi_pack_minus"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{() -> viewModel.decrementNumberOfProducts()}"
            android:text="@string/minus_sign"
            app:layout_constraintBottom_toBottomOf="@id/editable_products_in_pack"
            app:layout_constraintEnd_toStartOf="@id/editable_products_in_pack"
            app:layout_constraintTop_toTopOf="@id/editable_products_in_pack"
            android:visibility="@{viewModel.numberOfProducts > 1 ? View.VISIBLE : View.GONE}"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/editable_products_in_pack"
            style="@style/EditableFieldStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:inputType="number"
            android:text='@{`` + viewModel.numberOfProducts}'
            android:visibility="@{viewModel.numberOfProducts > 1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="@id/products_in_pack_label"
            app:layout_constraintStart_toStartOf="@id/products_in_pack_label"
            app:layout_constraintTop_toBottomOf="@id/products_in_pack_label"
            tools:text="5"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multi_pack_plus"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:onClick="@{() -> viewModel.incrementNumberOfProducts()}"
            android:visibility="@{viewModel.numberOfProducts > 1 ? View.VISIBLE : View.GONE}"
            android:text="@string/plus_sign"
            app:layout_constraintBottom_toBottomOf="@id/editable_products_in_pack"
            app:layout_constraintStart_toEndOf="@id/editable_products_in_pack"
            app:layout_constraintTop_toTopOf="@id/editable_products_in_pack"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pack_size_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:gravity="bottom"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/product_size_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editable_products_in_pack"
            app:setLabelForSubtypeSelected="@{viewModel.subtype}"
            tools:text="@string/pack_size_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_size_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:gravity="bottom"
            android:paddingBottom="4dp"
            android:visibility="@{(viewModel.numberOfProducts > 1) ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pack_size_label"
            app:layout_constraintEnd_toStartOf="@id/product_measurement_parent"
            app:setLabelForSubtypeSelected="@{viewModel.subtype}"
            tools:text="@string/product_size_label" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_measurement_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/product_size_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editable_products_in_pack"
            >

            <include
                android:id="@+id/product_measurement_units"
                layout="@layout/product_editor_measurement_units"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:measurementHandler="@{measurementHandler}"
                bind:viewModel="@{viewModel}" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>