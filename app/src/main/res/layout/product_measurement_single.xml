<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementSubTypeConverter" />

        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementZeroToBlankConverter" />

        <variable
            name="sizeValidation"
            type="com.example.peter.thekitchenmenu.utils.ProductSizeValidationHandler" />

        <variable
            name="measurement"
            type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementModel" />
    </data>

    <!-- Is it ok to call pack and itemEditableMeasurementOne the same name as in the other
            measurement layouts? Is this in a different name space?-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_measurement_single_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:onUnitOfMeasureSelected='@{measurement.measurementSubType}'
        app:numberOfItems='@{measurement.numberOfItems}'
        android:visibility="@{(measurement.numberOfMeasurementUnits == 1) ? View.VISIBLE : View.INVISIBLE}">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/pack_editable_measurement_one"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="textEnd"
            android:afterTextChanged='@{() -> sizeValidation.validatePackSize(packEditableMeasurementOne)}'
            android:text='@{MeasurementZeroToBlankConverter.doNotShowZero(packEditableMeasurementOne, measurement.packMeasurementOne)}'
            app:onUnitOfMeasureSelected='@{measurement.measurementSubType}'
            app:numberOfItems='@{measurement.numberOfItems}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pack_measurement_label_one"
            app:layout_constraintBottom_toTopOf="@id/item_editable_measurement_one"
            tools:text="16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pack_measurement_label_one"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/pack_editable_measurement_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_measurement_label_one"
            app:onUnitOfMeasureSelected='@{measurement.measurementSubType}'
            app:numberOfItems='@{measurement.numberOfItems}'
            tools:text="ea" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/item_editable_measurement_one"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="textEnd"
            android:afterTextChanged='@{() -> sizeValidation.validatePackSize(itemEditableMeasurementOne)}'
            android:text='@{MeasurementZeroToBlankConverter.doNotShowZero(itemEditableMeasurementOne, measurement.itemMeasurementOne)}'
            app:onUnitOfMeasureSelected='@{measurement.measurementSubType}'
            app:numberOfItems='@{measurement.numberOfItems}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_measurement_label_one"
            tools:text="16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_measurement_label_one"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_editable_measurement_one"
            app:onUnitOfMeasureSelected='@{measurement.measurementSubType}'
            app:numberOfItems='@{measurement.numberOfItems}'
            tools:text="oz" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>