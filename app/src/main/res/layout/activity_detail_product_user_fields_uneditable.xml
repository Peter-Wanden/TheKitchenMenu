<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_detail_product_user_fields_uneditable_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!--
                README
                Visibility for this Layout is set to gone as it is turned on and off
                programmatically as and when required. If you wish to edit this layout delete this
                line from above 'android:visibility="gone"' and replace it when done
         -->

        <!-- Category label -->
        <TextView
            android:id="@+id/activity_detail_product_user_fields_uneditable_tv_category_label"
            style="@style/CategoryStyleUneditable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_retailer"
            app:layout_constraintBottom_toBottomOf="@+id/activity_detail_product_user_fields_uneditable_tv_retailer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_detail_product_user_fields_uneditable_tv_retailer" />

        <!-- Category field -->
        <TextView
            android:id="@+id/activity_detail_product_user_fields_uneditable_tv_retailer"
            style="@style/EditTextFieldStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Waitrose" />

        <!-- Price label -->
        <TextView
            android:id="@+id/activity_detail_product_user_fields_uneditable_tv_price_label"
            style="@style/CategoryStyleUneditable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_price"
            app:layout_constraintBottom_toBottomOf="@+id/activity_detail_product_user_fields_uneditable_tv_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_detail_product_user_fields_uneditable_tv_price" />

        <!-- Price Field -->
        <TextView
            android:id="@+id/activity_detail_product_user_fields_uneditable_tv_price"
            style="@style/EditTextFieldStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_product_user_fields_uneditable_tv_retailer"
            tools:text="99.95" />

        <!-- Location label -->
        <TextView
            android:id="@+id/activity_detail_product_user_fields_uneditable_tv_location_label"
            style="@style/CategoryStyleUneditable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_location_room"
            app:layout_constraintBottom_toBottomOf="@+id/activity_detail_product_user_fields_uneditable_tv_location_room"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_detail_product_user_fields_uneditable_tv_location_room" />

         <!-- Location field -->
        <TextView
            android:id="@+id/activity_detail_product_user_fields_uneditable_tv_location_room"
            style="@style/EditTextFieldStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_product_user_fields_uneditable_tv_price"
            tools:text="Kitchen" />

        <!-- Location in room label -->
        <TextView
            android:id="@+id/activity_detail_product_user_fields_uneditable_tv_location_in_room_label"
            style="@style/CategoryStyleUneditable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_location_in_room"
            app:layout_constraintBottom_toBottomOf="@+id/activity_detail_product_user_fields_uneditable_tv_location_in_room"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_detail_product_user_fields_uneditable_tv_location_in_room" />

        <!-- Location in room field -->
        <TextView
            android:id="@+id/activity_detail_product_user_fields_uneditable_tv_location_in_room"
            style="@style/EditTextFieldStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_product_user_fields_uneditable_tv_location_room"
            tools:text="Cupboard under sink" />

        <!-- Invisible guideline -->
        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="116dp" />

    </android.support.constraint.ConstraintLayout>

</layout>