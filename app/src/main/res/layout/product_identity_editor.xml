<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="textValidation"
            type="com.example.peter.thekitchenmenu.utils.ProductTextValidationHandler" />

        <variable
            name="identityModel"
            type="com.example.peter.thekitchenmenu.data.model.ProductIdentityModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_identity_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_identity_border"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/rectangle_radius_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_identity_header"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/product_identity"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            app:layout_constraintEnd_toEndOf="@id/product_identity_border"
            app:layout_constraintTop_toTopOf="@id/product_identity_border" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/label_description"
            app:layout_constraintTop_toBottomOf="@id/product_identity_header"
            app:layout_constraintStart_toStartOf="@id/product_identity_border" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_description"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/hint_description"
            android:afterTextChanged='@{() -> textValidation.validateDescription(editableDescription)}'
            android:text='@{identityModel.description}'
            android:inputType="textCapWords"
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            app:layout_constraintEnd_toEndOf="@id/product_identity_border"
            app:layout_constraintTop_toBottomOf="@id/description_label" />

        <!--android:selection='@{productEditorViewModel.productModel.madeBy.length()}'-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/made_by_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/label_made_by"
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            app:layout_constraintTop_toBottomOf="@id/editable_description" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_made_by"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:afterTextChanged='@{() -> textValidation.validateMadeBy(editableMadeBy)}'
            android:hint="@string/hint_made_by"
            android:inputType="textCapWords"
            android:text='@{identityModel.madeBy}'
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            app:layout_constraintEnd_toEndOf="@id/product_identity_border"
            app:layout_constraintTop_toBottomOf="@id/made_by_label" />

        <!--android:selection='@{productEditorViewModel.productModel.madeBy.length()}'-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/label_category"
            app:layout_constraintTop_toTopOf="@id/spinner_category"
            app:layout_constraintBottom_toBottomOf="@id/spinner_category"
            app:layout_constraintStart_toStartOf="@id/product_identity_border" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_category"
            style="@style/spinner_style"
            android:layout_width="200dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:selectedItemPosition='@={identityModel.category}'
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@id/category_label"
            app:layout_constraintTop_toBottomOf="@id/editable_made_by" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shelf_life_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/label_shelf_life"
            app:layout_constraintTop_toTopOf="@id/spinner_shelf_life"
            app:layout_constraintBottom_toBottomOf="@id/spinner_shelf_life"
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            android:visibility='@{identityModel.category == 1 ? View.VISIBLE : View.GONE}' />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_shelf_life"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginTop="8dp"
            android:selectedItemPosition='@={identityModel.shelfLife}'
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@id/spinner_category"
            app:layout_constraintStart_toStartOf="@id/spinner_category"
            app:layout_constraintTop_toBottomOf="@id/spinner_category"
            app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
            android:visibility='@{identityModel.category == 1 ? View.VISIBLE : View.GONE}' />
        
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>