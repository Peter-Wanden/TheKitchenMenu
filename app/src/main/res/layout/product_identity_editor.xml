<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.peter.thekitchenmenu.ui.detail.product.editor.ProductIdentityViewModel" />

        <variable
            name="identityModel"
            type="com.example.peter.thekitchenmenu.data.model.ProductIdentityModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_identity_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_identity_border"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/rectangle_radius_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"/>

        <TextView
            android:id="@+id/product_identity_header"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/product_identity"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            app:layout_constraintEnd_toEndOf="@id/product_identity_border"
            app:layout_constraintTop_toTopOf="@id/product_identity_border" />

        <TextView
            android:id="@+id/description_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/label_description"
            app:layout_constraintTop_toBottomOf="@id/product_identity_header"
            app:layout_constraintStart_toStartOf="@id/product_identity_border" />

        <EditText
            android:id="@+id/editable_description"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:lines="2"
            android:minLines="2"
            android:hint="@string/hint_description"
            android:text='@{identityModel.description}'
            android:afterTextChanged="@{viewModel::descriptionChanged}"
            android:inputType="textCapWords"
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            app:layout_constraintEnd_toEndOf="@id/product_identity_border"
            app:layout_constraintTop_toBottomOf="@id/description_label" />

        <TextView
            android:id="@+id/made_by_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/label_shopping_list_item"
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            app:layout_constraintTop_toBottomOf="@id/editable_description" />

        <EditText
            android:id="@+id/editable_shopping_item_list_name"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:afterTextChanged="@{viewModel::shoppingListItemNameChanged}"
            android:hint="@string/hint_shopping_list_item"
            android:inputType="textCapSentences"
            android:text='@{identityModel.shoppingListItemName}'
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            app:layout_constraintEnd_toEndOf="@id/product_identity_border"
            app:layout_constraintTop_toBottomOf="@id/made_by_label" />

        <TextView
            android:id="@+id/category_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/label_category"
            app:layout_constraintTop_toTopOf="@id/spinner_category"
            app:layout_constraintBottom_toBottomOf="@id/spinner_category"
            app:layout_constraintStart_toStartOf="@id/product_identity_border" />

        <Spinner
            android:id="@+id/spinner_category"
            style="@style/spinner_style"
            android:layout_width="200dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:spinnerMode="dropdown"
            android:selectedItemPosition='@={identityModel.category}'
            app:layout_constraintStart_toEndOf="@id/category_label"
            app:layout_constraintTop_toBottomOf="@id/editable_shopping_item_list_name" />

        <TextView
            android:id="@+id/shelf_life_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/label_shelf_life"
            app:layout_constraintTop_toTopOf="@id/spinner_shelf_life"
            app:layout_constraintBottom_toBottomOf="@id/spinner_shelf_life"
            app:layout_constraintStart_toStartOf="@id/product_identity_border"
            android:visibility='@{identityModel.category == 1 ? View.VISIBLE : View.GONE}' />

        <Spinner
            android:id="@+id/spinner_shelf_life"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginTop="8dp"
            android:selectedItemPosition='@={identityModel.shelfLife}'
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@id/spinner_category"
            app:layout_constraintStart_toStartOf="@id/spinner_category"
            app:layout_constraintTop_toBottomOf="@id/spinner_category"
            app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
            android:visibility='@{identityModel.category == 1 ? View.VISIBLE : View.GONE}' />
        
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>