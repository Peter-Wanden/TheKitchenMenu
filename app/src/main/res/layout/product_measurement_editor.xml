<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementSubTypeConverter" />

        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementZeroToBlankConverter" />

        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementSubType"/>

        <variable
            name="measurementValidation"
            type="com.example.peter.thekitchenmenu.utils.ProductMeasurementHandler" />

        <variable
            name="measurement"
            type="com.example.peter.thekitchenmenu.data.model.ProductMeasurementModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_identity_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/measurement_border"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/rectangle_radius_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/product_measurement_parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_identity_header"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/hint_pack_size"
            android:text="@string/product_size_options"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/measurement_border"
            app:layout_constraintStart_toStartOf="@id/measurement_border"
            app:layout_constraintTop_toTopOf="@id/measurement_border" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/items_in_pack_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/label_number_of_packs"
            app:layout_constraintEnd_toEndOf="@id/measurement_border"
            app:layout_constraintStart_toStartOf="@id/measurement_border"
            app:layout_constraintTop_toBottomOf="@id/product_identity_header"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multi_pack_minus"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:onClick='@{() -> measurementValidation.modifyNumberOfItemsByOne(editableItemsInPack, multiPackMinus)}'
            android:text="@string/minus_sign"
            app:layout_constraintBottom_toBottomOf="@id/editable_items_in_pack"
            app:layout_constraintEnd_toStartOf="@id/editable_items_in_pack"
            app:layout_constraintTop_toTopOf="@id/editable_items_in_pack" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editable_items_in_pack"
            style="@style/EditableFieldStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:inputType="number"
            android:nextFocusForward="@id/spinner_unit_of_measure"
            android:text='@{`` + measurement.numberOfItems}'
            android:afterTextChanged='@{() -> measurementValidation.numberOfItems(editableItemsInPack)}'
            app:layout_constraintEnd_toEndOf="@id/items_in_pack_label"
            app:layout_constraintStart_toStartOf="@id/items_in_pack_label"
            app:layout_constraintTop_toBottomOf="@id/items_in_pack_label"
            tools:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multi_pack_plus"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:onClick='@{() -> measurementValidation.modifyNumberOfItemsByOne(editableItemsInPack, multiPackPlus)}'
            android:text="@string/plus_sign"
            app:layout_constraintBottom_toBottomOf="@id/editable_items_in_pack"
            app:layout_constraintStart_toEndOf="@id/editable_items_in_pack"
            app:layout_constraintTop_toTopOf="@id/editable_items_in_pack" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/unit_of_measure_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/unit_of_measure_label"
            app:layout_constraintStart_toStartOf="@id/measurement_border"
            app:layout_constraintEnd_toEndOf="@id/measurement_border"
            app:layout_constraintTop_toBottomOf="@id/editable_items_in_pack" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_unit_of_measure"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="wrap_content"
            android:selectedItemPosition='@{MeasurementSubTypeConverter.toInt(measurement.measurementSubType)}'
            android:onItemSelected='@{() -> measurementValidation.newUnitOfMeasureSelected(spinnerUnitOfMeasure)}'
            app:layout_constraintEnd_toEndOf="@id/measurement_border"
            app:layout_constraintStart_toStartOf="@id/measurement_border"
            app:layout_constraintTop_toBottomOf="@id/unit_of_measure_label">
        </androidx.appcompat.widget.AppCompatSpinner>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pack_size_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:gravity="bottom"
            android:paddingEnd="8dp"
            android:paddingStart="0dp"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/item_size_label"
            app:layout_constraintStart_toStartOf="@id/measurement_border"
            app:layout_constraintTop_toBottomOf="@id/spinner_unit_of_measure"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:setLabelForSubTypeSelected='@{measurement.measurementSubType}'
            tools:text="@string/pack_size_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_size_label"
            style="@style/EditableCategoryStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:paddingBottom="4dp"
            android:gravity="bottom"
            app:layout_constraintTop_toBottomOf="@id/pack_size_label"
            app:layout_constraintStart_toStartOf="@id/measurement_border"
            android:visibility="@{(measurement.numberOfItems > 1) ? View.VISIBLE : View.INVISIBLE}"
            app:setLabelForSubTypeSelected='@{measurement.measurementSubType}'
            tools:text="@string/item_size_label" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_measurement_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spinner_unit_of_measure"
            app:layout_constraintEnd_toEndOf="@id/measurement_border"
            app:layout_constraintStart_toEndOf="@id/pack_size_label">

            <include
                android:id="@+id/product_measurement_two_units"
                layout="@layout/product_measurement_two_units"
                app:layout_constraintBottom_toBottomOf="@id/product_measurement_parent"
                app:layout_constraintEnd_toEndOf="@id/product_measurement_parent"
                app:layout_constraintStart_toStartOf="@id/product_measurement_parent"
                bind:measurementValidation="@{measurementValidation}"
                bind:measurement="@{measurement}"
                android:visibility='@{measurement.measurementSubType == MeasurementSubType.TYPE_METRIC_MASS || measurement.measurementSubType == MeasurementSubType.TYPE_METRIC_VOLUME || measurement.measurementSubType == MeasurementSubType.TYPE_COUNT ? View.VISIBLE : View.INVISIBLE}'/>

            <include
                android:id="@+id/product_measurement_triple"
                layout="@layout/product_measurement_three_units"
                app:layout_constraintBottom_toBottomOf="@id/product_measurement_parent"
                app:layout_constraintEnd_toEndOf="@id/product_measurement_parent"
                app:layout_constraintStart_toStartOf="@id/product_measurement_parent"
                bind:measurementValidation="@{measurementValidation}"
                bind:measurement="@{measurement}"
                android:visibility='@{measurement.measurementSubType == MeasurementSubType.TYPE_IMPERIAL_VOLUME || measurement.measurementSubType == MeasurementSubType.TYPE_IMPERIAL_MASS ? View.VISIBLE : View.INVISIBLE}'/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>