<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.peter.thekitchenmenu.ui.detail.product.viewer.ProductViewerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_identity_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/description"
            style="@style/ViewerTextFieldStyle"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Dove Men+Care clean comfort aerosol antiperspirant deodorant" />

        <TextView
            android:id="@+id/shopping_list_item_name"
            style="@style/ViewerTextFieldStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"
            tools:text="deodorant" />

        <TextView
            android:id="@+id/pack_size"
            style="@style/ViewerTextFieldStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shopping_list_item_name"
            tools:text="150" />

        <TextView
            android:id="@+id/unit_of_measure"
            style="@style/ViewerTextFieldStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/pack_size"
            app:layout_constraintStart_toEndOf="@id/pack_size"
            app:layout_constraintTop_toTopOf="@id/pack_size"
            app:layout_constraintVertical_bias="1.0"
            tools:text="ml" />

        <TextView
            android:id="@+id/shelf_life"
            style="@style/ViewerTextFieldStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pack_size"
            tools:text="shelf life: show if food" />

        <TextView
            android:id="@+id/category"
            style="@style/ViewerTextFieldStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shelf_life"
            tools:text="Non Food" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>