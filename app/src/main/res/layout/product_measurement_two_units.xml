<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.example.peter.thekitchenmenu.utils.unitofmeasure.MeasurementSubTypeConverter" />
        <import type="com.example.peter.thekitchenmenu.utils.IntegerToStringFormatConverter" />

        <variable
            name="viewModel"
            type="com.example.peter.thekitchenmenu.ui.detail.product.editor.ProductMeasurementViewModel" />

        <variable
            name="measurementHandler"
            type="com.example.peter.thekitchenmenu.ui.detail.product.editor.ProductMeasurementHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_measurement_double_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/pack_editable_measurement_two"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toTopOf="@+id/item_editable_measurement_two"
            app:layout_constraintEnd_toStartOf="@+id/pack_measurement_label_two"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:afterTextChanged="@{() -> measurementHandler.newMeasurementReceived(packEditableMeasurementTwo)}"

            android:text="@{`` + viewModel.packMeasurementTwo}"

            tools:text="22" />

<!--        app:setUpEditTextForSubTypeSelected='@{viewModel.subType}'-->
<!--        app:fieldVisibilityAdapterNumberOfUnits='@{viewModel.numberOfMeasurementUnits}'-->
<!--        android:text="@{IntegerToStringFormatConverter.integerToString(packEditableMeasurementTwo, viewModel.packMeasurementTwo, viewModel.packMeasurementTwo)}"-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pack_measurement_label_two"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/pack_editable_measurement_one"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pack_editable_measurement_two"
            app:layout_constraintTop_toTopOf="@+id/pack_editable_measurement_two"
            app:setLabelForSubTypeSelected='@{viewModel.subType}'
            app:fieldVisibilityAdapterNumberOfUnits='@{viewModel.numberOfMeasurementUnits}'
            tools:text="l" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/item_editable_measurement_two"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_measurement_label_two"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:afterTextChanged="@{() -> measurementHandler.newMeasurementReceived(itemEditableMeasurementTwo)}"

            android:text='@{`` + viewModel.itemMeasurementTwo}'

            tools:text="22" />

<!--        android:text="@{IntegerToStringFormatConverter.integerToString(itemEditableMeasurementTwo, viewModel.itemMeasurementTwo, viewModel.itemMeasurementTwo)}"-->
<!--        app:setUpEditTextForSubTypeSelected='@{viewModel.subType}'-->
<!--        app:fieldVisibilityAdapterNumberOfUnits='@{viewModel.numberOfMeasurementUnits}'-->
<!--        app:fieldVisibilityAdapterNumberOfItems='@{viewModel.numberOfItems}'-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_measurement_label_two"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/item_editable_measurement_one"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_editable_measurement_two"
            app:layout_constraintTop_toTopOf="@+id/item_editable_measurement_two"
            app:setLabelForSubTypeSelected='@{viewModel.subType}'
            app:fieldVisibilityAdapterNumberOfUnits='@{viewModel.numberOfMeasurementUnits}'
            app:fieldVisibilityAdapterNumberOfItems='@{viewModel.numberOfItems}'
            tools:text="l" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/pack_editable_measurement_one"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"

            android:afterTextChanged="@{() -> measurementHandler.newMeasurementReceived(packEditableMeasurementOne)}"
            android:text='@{`` + viewModel.packMeasurementOne}'

            android:textAlignment="textEnd"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/pack_measurement_label_one"
            app:layout_constraintStart_toEndOf="@+id/pack_measurement_label_two"
            app:layout_constraintTop_toTopOf="@+id/pack_measurement_label_two"
            app:setUpEditTextForSubTypeSelected='@{viewModel.subType}'
            tools:text="16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pack_measurement_label_one"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pack_editable_measurement_one"
            app:layout_constraintTop_toTopOf="@+id/pack_editable_measurement_one"
            app:setLabelForSubTypeSelected='@{viewModel.subType}'
            tools:text="ml" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/item_editable_measurement_one"
            style="@style/EditableFieldStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/standard_input_item_height"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toStartOf="@+id/item_measurement_label_one"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_measurement_label_two"
            app:layout_constraintTop_toTopOf="@+id/item_measurement_label_two"

            android:text='@{`` + viewModel.itemMeasurementOne}'
            android:afterTextChanged="@{() -> measurementHandler.newMeasurementReceived(itemEditableMeasurementOne)}"

            app:fieldVisibilityAdapterNumberOfItems='@{viewModel.numberOfItems}'
            app:setUpEditTextForSubTypeSelected='@{viewModel.subType}'
            tools:text="16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_measurement_label_one"
            style="@style/EditableCategoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_input_item_height"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_editable_measurement_one"
            app:layout_constraintTop_toTopOf="@+id/item_editable_measurement_one"
            app:fieldVisibilityAdapterNumberOfItems='@{viewModel.numberOfItems}'
            app:setLabelForSubTypeSelected='@{viewModel.subType}'
            tools:text="ml" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>