<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.peter.thekitchenmenu.ui.detail.recipe.recipeeditor.RecipeIdentityViewModel">
        </variable>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/recipe_identity_editor_constraint_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/recipe_course_editor_center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <ImageView
        android:id="@+id/recipe_identity_editor_identity_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/editable_recipe_description"
        app:layout_constraintEnd_toEndOf="@id/editable_recipe_title"
        app:layout_constraintStart_toStartOf="@id/editable_recipe_title"
        app:layout_constraintTop_toTopOf="@id/recipe_editor_title_label"
        android:src="@drawable/rectangle"
        />

    <TextView
        android:id="@+id/recipe_editor_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:text="@string/recipe_title_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/editable_recipe_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@={viewModel.titleObservable}"
        app:editTextErrorSetter="@{viewModel.titleErrorMessage}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipe_editor_title_label"
        tools:text="Perfect pancakes recipe"
        />

    <TextView
        android:id="@+id/recipe_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGrey"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:text="@string/recipe_description_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editable_recipe_title"
        />

    <EditText
        android:id="@+id/editable_recipe_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@={viewModel.descriptionObservable}"
        app:editTextErrorSetter="@{viewModel.descriptionErrorMessage}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipe_description_label"
        tools:text="An easy pancake batter recipe with tips on how to make the best pancakes every time with sweet or savoury toppings"
        />

    <ImageView
        android:id="@+id/recipe_identity_editor_times_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipe_identity_editor_identity_box"
        app:layout_constraintBottom_toBottomOf="@id/editable_recipe_cooking_time_hours"
        android:src="@drawable/rectangle"
        />

    <TextView
        android:id="@+id/recipe_editor_prep_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:text="@string/recipe_preparation_time_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipe_identity_editor_identity_box"
        />

    <TextView
        android:id="@+id/recipe_editor_prep_time_hours_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipe_hours_label"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/editable_recipe_prep_time_hours"
        />

    <EditText
        android:id="@+id/editable_recipe_prep_time_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/recipe_editor_prep_time_label"
        app:layout_constraintStart_toEndOf="@id/recipe_editor_prep_time_hours_label"
        app:layout_constraintEnd_toStartOf="@id/recipe_course_editor_center_guideline"
        />

    <TextView
        android:id="@+id/recipe_editor_prep_time_minutes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipe_minutes_label"
        android:layout_marginStart="24dp"
        app:layout_constraintBaseline_toBaselineOf="@id/editable_recipe_prep_time_hours"
        app:layout_constraintStart_toEndOf="@id/recipe_course_editor_center_guideline"
        />

    <EditText
        android:id="@+id/editable_recipe_prep_time_minutes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintBaseline_toBaselineOf="@id/editable_recipe_prep_time_hours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recipe_editor_prep_time_minutes_label"
        tools:text="5"
        />

    <TextView
        android:id="@+id/recipe_identity_editor_cook_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:text="@string/recipe_cooking_time_label"
        app:layout_constraintTop_toBottomOf="@id/editable_recipe_prep_time_minutes"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/recipe_editor_cooking_time_hours_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipe_hours_label"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/editable_recipe_cooking_time_hours"
        />

    <EditText
        android:id="@+id/editable_recipe_cooking_time_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/recipe_identity_editor_cook_time_label"
        app:layout_constraintStart_toEndOf="@id/recipe_editor_cooking_time_hours_label"
        app:layout_constraintEnd_toStartOf="@id/recipe_course_editor_center_guideline"
        />

    <TextView
        android:id="@+id/recipe_editor_cooking_time_minutes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipe_minutes_label"
        android:layout_marginStart="24dp"
        app:layout_constraintBaseline_toBaselineOf="@id/editable_recipe_cooking_time_hours"
        app:layout_constraintStart_toEndOf="@id/recipe_course_editor_center_guideline"
        />

    <EditText
        android:id="@+id/editable_recipe_cooking_time_minutes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintBaseline_toBaselineOf="@id/editable_recipe_cooking_time_hours"
        app:layout_constraintStart_toEndOf="@id/recipe_editor_cooking_time_minutes_label"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="25"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>