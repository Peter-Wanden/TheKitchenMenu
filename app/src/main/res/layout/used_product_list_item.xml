<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View.OnClickListener"/>

        <variable
            name="usedProduct"
            type="com.example.peter.thekitchenmenu.data.model.UsedProductDataModel" />

        <variable
            name="listener"
            type="com.example.peter.thekitchenmenu.ui.catalog.UsedProductItemUserActionsListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_view_margin"
        android:layout_marginEnd="@dimen/card_view_margin"
        android:layout_marginTop="@dimen/card_view_margin_top_bottom"
        android:layout_marginBottom="@dimen/card_view_margin_top_bottom"
        android:clickable="true"
        android:elevation="@dimen/card_view_elevation"
        android:focusable="true"
        android:foregroundGravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        android:onClick="@{() -> listener.onUsedProductClicked(usedProduct)}" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/used_product_list_item_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/product_list_item_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-medium"
                android:gravity="start|top"
                android:maxLines="3"
                android:paddingEnd="@dimen/list_item_top_full_margin"
                android:paddingStart="@dimen/list_item_top_full_margin"
                android:paddingTop="@dimen/list_item_top_half_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/darkGrey"
                app:layout_constraintEnd_toStartOf="@+id/product_list_item_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Cirio canned chopped tomatoes"
                android:text="@{usedProduct.product.description}"
                />

            <ImageView
                android:id="@+id/product_list_item_image"
                android:contentDescription="@string/cd_picture_of_product"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/list_item_bottom_margin"
                android:layout_marginEnd="8dp"
                android:src="@drawable/cirio_tinned_tomatoes"
                android:transitionName="@string/transition_product"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:webImageUrl='@{usedProduct.product.webImageUrl}'
                app:remoteSmallImageUri='@{usedProduct.product.remoteSmallImageUri}' />

            <TextView
                android:id="@+id/product_list_item_pack_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingEnd="@dimen/list_item_top_half_margin"
                android:paddingStart="@dimen/list_item_top_full_margin"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_list_item_description"
                tools:text="400"
                android:text="@{`` + usedProduct.product.baseUnits}"/>

            <TextView
                android:id="@+id/product_list_item_label_unit_of_measure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingStart="@dimen/list_item_top_half_margin"
                android:paddingEnd="@dimen/list_item_top_half_margin"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/grey"
                app:layout_constraintStart_toEndOf="@+id/product_list_item_pack_size"
                app:layout_constraintTop_toBottomOf="@+id/product_list_item_description"
                tools:text="ml"
                android:text="@{`` + usedProduct.product.unitOfMeasureSubtype}"/>

            <TextView
                android:id="@+id/used_product_list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/darkGrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Â£24.99"
                app:stringToCurrency="@{usedProduct.usedProduct.price}"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/used_product_list_item_last_updated_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/grey"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toTopOf="@id/used_product_list_item_price"
                app:layout_constraintBottom_toBottomOf="@id/used_product_list_item_price"
                app:layout_constraintStart_toEndOf="@id/used_product_list_item_price"
                android:text="@string/lasUpdated"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/used_product_list_item_last_updated_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/grey"
                app:layout_constraintBottom_toBottomOf="@id/used_product_list_item_price"
                app:layout_constraintStart_toEndOf="@+id/used_product_list_item_last_updated_label"
                app:layout_constraintTop_toTopOf="@id/used_product_list_item_price"
                tools:text="01 Apr 2019"
                app:longToDate="@{usedProduct.usedProduct.lastUpdate}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>