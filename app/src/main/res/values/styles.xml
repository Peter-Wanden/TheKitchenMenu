<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/primaryLightColor</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/lightGrey</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:textColorHighlight">@color/textColorHighlight</item>
        <!-- Sets the status bar color -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <!-- Enables content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Text color of overflow menu items -->
        <item name="android:itemTextAppearance">@style/AppTheme.ItemTextStyle</item>

    </style>

    <style name="AppTheme.ItemTextStyle" parent="@android:style/TextAppearance.Widget">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- Style for a category TextView in product_viewer_identity view mode -->
    <style name="ViewerCategoryStyle">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for a category TextView in product_viewer_identity edit mode -->
    <style name="EditableCategoryStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for a TextView field in product_viewer_identity view mode -->
    <style name="ViewerTextFieldStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for an EditText field in the editor -->
    <style name="EditableFieldStyle" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Card View styles -->
    <style name="cardViewStyle" parent="AppTheme">

    </style>

    <style name="CardViewTitleText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title_text</item>
        <item name="android:paddingTop">@dimen/card_title_top_padding</item>
        <item name="android:paddingBottom">@dimen/card_bottom_padding</item>
        <item name="android:paddingRight">@dimen/card_right_left_padding</item>
        <item name="android:paddingLeft">@dimen/card_right_left_padding</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="CardViewSubText" parent="CardViewTitleText">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for the list items in the widget -->
    <style name="TableText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- Style for the drop down spinners -->
    <style name="spinner_style" parent="EditableFieldStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:dropDownWidth">match_parent</item>
    </style>

    <!-- Transitions -->
    <style name="AppTheme.Home">
        <item name="android:windowExitTransition">
            @transition/grid_exit</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="check_box_style" parent="AppTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>
</resources>
