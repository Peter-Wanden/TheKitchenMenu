<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:textColorHighlight">@color/primary_light</item>
    </style>

    <!-- Style for a category TextView in product view mode -->
    <style name="UneditableCategoryStyle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for a category TextView in product edit mode -->
    <style name="EditableCategoryStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for a TextView field in product view mode -->
    <style name="UneditableTextFieldStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for an EditText field in the editor -->
    <style name="EditableFieldStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Card View styles -->
    <style name="cardViewStyle" parent="AppTheme">

    </style>

    <style name="CardViewTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title_text</item>
        <item name="android:paddingTop">@dimen/card_title_top_padding</item>
        <item name="android:paddingBottom">@dimen/card_bottom_padding</item>
        <item name="android:paddingRight">@dimen/card_right_left_padding</item>
        <item name="android:paddingLeft">@dimen/card_right_left_padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CardViewSubText" parent="CardViewTitleText">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for the list items in the widget -->
    <style name="TableText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

</resources>
